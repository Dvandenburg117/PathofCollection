<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PathofExile2.Model.LoginSignupPage">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Login">
        <StackLayout HorizontalOptions="Center" Margin="0,100,0,0">
            <Label Text="Enter your username and password to login"></Label>
            <Entry Keyboard="Text"
                   x:Name="user">
            </Entry>
            <Entry IsPassword="true"
                   x:Name="pass">
            </Entry>
            <Button x:Name="loginDBButton"
                    Text="LoginwithDB"
                    Clicked="HandleDB_Login"></Button>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Sign Up">
        <StackLayout HorizontalOptions="Center" Margin="0,100,0,0">
            <Label Text="Create an account by providing a username and password"></Label>
            <Entry Keyboard="Text"
                   x:Name="username">
            </Entry>
            <Entry IsPassword="true"
                   x:Name="password">
            </Entry>
            <Button x:Name="signupButton"
                    Text="Login"
                    Clicked="Handle_Creation"></Button>
        </StackLayout>
    </ContentPage>
</TabbedPage>